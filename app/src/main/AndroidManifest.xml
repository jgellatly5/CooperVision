<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jordangellatly.coopervision">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cooper_drop_purple"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/PurpleTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/PurpleTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:theme="@style/RedTheme" />
        <activity
            android:name=".ListActivity"
            android:theme="@style/ListActivityTheme"></activity>
        <activity android:name=".DetailActivity" />
        <activity
            android:name=".FilterActivity"
            android:theme="@style/CyanTheme"></activity>
        <activity
            android:name=".CreateActivity"
            android:theme="@style/OrangeTheme" />
    </application>

</manifest>